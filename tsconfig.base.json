{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@client/auth/data-access-auth": [
        "libs/auth/data-access-auth/src/index.ts"
      ],
      "@client/auth/feature": ["libs/auth/feature/src/index.ts"],
      "@client/shared-module": ["libs/shared-module/src/index.ts"],
      "@client/shared-state": ["libs/shared-state/src/index.ts"],
      "@client/shared-ui": ["libs/shared-ui/src/index.ts"],
      "auth/Routes": ["apps/auth/src/app/remote-entry/entry.routes.ts"],
      "feed/Routes": ["apps/feed/src/app/remote-entry/entry.routes.ts"],
      "messaging/Routes": [
        "apps/messaging/src/app/remote-entry/entry.routes.ts"
      ],
      "profile/Routes": ["apps/profile/src/app/remote-entry/entry.routes.ts"],
      "projects/Routes": ["apps/projects/src/app/remote-entry/entry.routes.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
